{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'projup'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=projup",
                    "--package=projup"
                ],
                "filter": {
                    "name": "projup",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    // "--test=config",
                    "--package=projup"
                ],
                "filter": {
                    "name": "config",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}